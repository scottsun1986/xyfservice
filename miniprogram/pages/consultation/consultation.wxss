/* pages/consultation/consultation.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  padding: 16rpx 24rpx;
}

.search-input icon {
  margin-right: 16rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

/* 快速咨询分类 */
.quick-categories {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  width: 22%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 常见问题 */
.faq-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.faq-list {
  border-top: 1rpx solid #e5e5e5;
}

.faq-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.faq-question {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.faq-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 在线服务 */
.service-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 120rpx;
}

.service-list {
  border-top: 1rpx solid #e5e5e5;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
}

.service-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.service-status.online {
  background-color: #e8f5e8;
  color: #52c41a;
}

.service-action {
  padding: 12rpx 24rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 24rpx;
  font-size: 26rpx;
}

/* 浮动客服按钮 */
.float-service {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  z-index: 999;
}

.float-icon {
  width: 50rpx;
  height: 50rpx;
}